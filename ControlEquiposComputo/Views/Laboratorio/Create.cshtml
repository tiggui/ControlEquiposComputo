@model ControlEquiposComputo.Models.Laboratorio

@{
    ViewData["Title"] = "Crear Laboratorio";
}

<h1>Crear Laboratorio</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NombreLaboratorio"></label>
        <input asp-for="NombreLaboratorio" class="form-control" />
        <span asp-validation-for="NombreLaboratorio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ubicacion"></label>
        <input asp-for="Ubicacion" class="form-control" />
        <span asp-validation-for="Ubicacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacidad"></label>
        <input asp-for="Capacidad" class="form-control" type="number"/>
        <span asp-validation-for="Capacidad" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
