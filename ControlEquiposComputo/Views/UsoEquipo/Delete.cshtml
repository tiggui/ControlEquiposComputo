@model ControlEquiposComputo.Models.UsoEquipo

@{
    ViewData["Title"] = "Eliminar Uso de Equipo";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h3>¿Estás seguro de que deseas eliminar este uso de equipo?</h3>
    <div>
        <h4>Estudiante: @Model.Estudiante.Nombre</h4>
        <h4>Equipo: @Model.Equipo.NumeroEquipo</h4>
        <h4>Actividad: @Model.Actividad</h4>
        <h4>Incidentes: @Model.Incidentes</h4>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="UsoEquipoID" />
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
