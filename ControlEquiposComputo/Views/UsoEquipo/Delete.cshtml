@model ControlEquiposComputo.Models.UsoEquipo

@{
    ViewData["Title"] = "Eliminar Uso de Equipo";
}

<h1>Eliminar Uso de Equipo</h1>

<div>
    <h3>¿Estás seguro de que quieres eliminar este uso de equipo?</h3>
    <dl class="row">
        <dt class="col-sm-2">Estudiante</dt>
        <dd class="col-sm-10">@Model.Estudiante.Nombre</dd>
        <dt class="col-sm-2">Equipo</dt>
        <dd class="col-sm-10">@Model.Equipo.NumeroEquipo</dd>
        <dt class="col-sm-2">Clase</dt>
        <dd class="col-sm-10">@Model.Clase.NombreClase</dd>
        <dt class="col-sm-2">Fecha de Asignación</dt>
        <dd class="col-sm-10">@Model.FechaRegistro.ToShortDateString()</dd>
        <dt class="col-sm-2">Actividad</dt>
        <dd class="col-sm-10">@Model.Actividad</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UsoEquipoID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
