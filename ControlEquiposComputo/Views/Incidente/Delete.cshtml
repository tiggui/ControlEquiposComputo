@model ControlEquiposComputo.Models.Incidente

@{
    ViewData["Title"] = "Eliminar Incidente";
}

<h2>Eliminar Incidente</h2>

<div>
    <h4>Incidente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Laboratorio</dt>
        <dd class="col-sm-10">@Model.Laboratorio.NombreLaboratorio</dd>
        <dt class="col-sm-2">Equipo</dt>
        <dd class="col-sm-10">@Model.Equipo.Marca</dd>
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Usuario.Nombre</dd>
        <dt class="col-sm-2">Técnico</dt>
        <dd class="col-sm-10">@Model.Tecnico.Nombre</dd>
        <dt class="col-sm-2">Fecha de Incidente</dt>
        <dd class="col-sm-10">@Model.FechaIncidente.ToShortDateString()</dd>
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IncidenteID" />
    <div class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
