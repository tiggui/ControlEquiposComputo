@model ControlEquiposComputo.Models.Incidente

@{
    ViewData["Title"] = "Eliminar Incidente";
}

<h1>Eliminar Incidente</h1>

<div>
    <h3>¿Estás seguro de que quieres eliminar este incidente?</h3>
    <dl class="row">
        <dt class="col-sm-2">Uso de Equipo</dt>
        <dd class="col-sm-10">@Model.UsoEquipo.Actividad</dd>
        <dt class="col-sm-2">Fecha del Incidente</dt>
        <dd class="col-sm-10">@Model.FechaIncidente.ToShortDateString()</dd>
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IncidenteID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
