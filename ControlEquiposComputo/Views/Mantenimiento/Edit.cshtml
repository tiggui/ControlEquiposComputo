@model ControlEquiposComputo.Models.Mantenimiento

@{
    ViewData["Title"] = "Editar Mantenimiento";
}

<h2>Editar Mantenimiento</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MantenimientoID" />
    <div class="form-group">
        <label asp-for="EquipoID" class="control-label"></label>
        <select asp-for="EquipoID" class="form-control" asp-items="ViewBag.EquipoID"></select>
        <span asp-validation-for="EquipoID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TecnicoID" class="control-label"></label>
        <select asp-for="TecnicoID" class="form-control" asp-items="ViewBag.TecnicoID"></select>
        <span asp-validation-for="TecnicoID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaMantenimiento" class="control-label"></label>
        <input asp-for="FechaMantenimiento" class="form-control" type="date" />
        <span asp-validation-for="FechaMantenimiento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
