@model ControlEquiposComputo.Models.Mantenimiento

@{
    ViewData["Title"] = "Editar Mantenimiento";
}

<h1>Editar Mantenimiento</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MantenimientoID" />
    <div class="form-group">
        <label asp-for="TecnicoID"></label>
        <select asp-for="TecnicoID" class="form-control" asp-items="ViewBag.TecnicoID"></select>
        <span asp-validation-for="TecnicoID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EquipoID"></label>
        <select asp-for="EquipoID" class="form-control" asp-items="ViewBag.EquipoID"></select>
        <span asp-validation-for="EquipoID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaMantenimiento"></label>
        <input asp-for="FechaMantenimiento" class="form-control" type="date" />
        <span asp-validation-for="FechaMantenimiento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
