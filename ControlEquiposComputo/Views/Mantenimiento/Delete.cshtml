@model ControlEquiposComputo.Models.Mantenimiento

@{
    ViewData["Title"] = "Eliminar Mantenimiento";
}

<h1>Eliminar Mantenimiento</h1>

<div>
    <h3>¿Estás seguro de que quieres eliminar este mantenimiento?</h3>
    <dl class="row">
        <dt class="col-sm-2">Técnico</dt>
        <dd class="col-sm-10">@Model.Tecnico.Nombre</dd>
        <dt class="col-sm-2">Equipo</dt>
        <dd class="col-sm-10">@Model.Equipo.NumeroEquipo</dd>
        <dt class="col-sm-2">Fecha de Mantenimiento</dt>
        <dd class="col-sm-10">@Model.FechaMantenimiento.ToShortDateString()</dd>
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MantenimientoID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
