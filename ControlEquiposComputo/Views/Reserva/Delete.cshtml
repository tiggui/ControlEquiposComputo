@model ControlEquiposComputo.Models.Reserva

@{
    ViewData["Title"] = "Eliminar Reserva";
}

<h2>Eliminar Reserva</h2>

<h3>¿Está seguro que desea eliminar esta reserva?</h3>

<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Usuario.Nombre</dd>
        <dt class="col-sm-2">Laboratorio</dt>
        <dd class="col-sm-10">@Model.Laboratorio.NombreLaboratorio</dd>
        <dt class="col-sm-2">Fecha de Reserva</dt>
        <dd class="col-sm-10">@Model.FechaReserva.ToShortDateString()</dd>
        <dt class="col-sm-2">Hora Inicio</dt>
        <dd class="col-sm-10">@Model.HoraInicio</dd>
        <dt class="col-sm-2">Hora Fin</dt>
        <dd class="col-sm-10">@Model.HoraFin</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ReservaID" />
    <div class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
