@model IEnumerable<ControlEquiposComputo.Models.Clase>

@{
    ViewData["Title"] = "Inicio";
}

<h2>Lista de Clases</h2>

<!-- Dropdown para seleccionar una clase -->
<select id="claseSelect" class="form-control">
    <option value="">Seleccione una clase...</option>
    @foreach (var clase in Model)
    {
        <option value="@clase.ClaseID">@clase.NombreClase</option>
    }
</select>

<!-- Contenedor donde se mostrará la lista de UsoEquipos -->
<div id="usoEquiposContainer">
    <p>Seleccione una clase para ver los equipos usados.</p>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Cuando se selecciona una clase del dropdown
            $('#claseSelect').change(function () {
                var claseId = $(this).val();
                if (claseId) {
                    // Hacer una llamada AJAX al controlador Home para obtener los equipos de esa clase
                    $.ajax({
                        url: '@Url.Action("GetUsoEquiposPorClase", "Home")',
                        data: { claseId: claseId },
                        success: function (result) {
                            // Reemplazar el contenido del contenedor con la vista parcial
                            $('#usoEquiposContainer').html(result);
                        }
                    });
                } else {
                    // Limpiar el contenedor si no se selecciona ninguna clase
                    $('#usoEquiposContainer').html('<p>Seleccione una clase para ver los equipos usados.</p>');
                }
            });
        });
    </script>
}
