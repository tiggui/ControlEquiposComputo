@model ControlEquiposComputo.ViewModels.LoginVM;
@{
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login</title>
    <link rel="stylesheet" href="~/fortawesome/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControlEquiposComputo.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    Iniciar Sesión
                </div>
                <div class="card-body">
                    <form asp-controller="Acceso" asp-action="Login" method="post">
                     
                        <input class="form-control mb-3" type="text" placeholder="Correo" required asp-for="Email" />
                        
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Contraseña" />
                        
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Acceder</button>
                        </div>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                        ¿No  tienes una Cuenta? <a asp-controller="Acceso" asp-action="Registrar">Regístrate</a>


                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
