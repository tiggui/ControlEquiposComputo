@model ControlEquiposComputo.Models.Equipo

@{
    ViewData["Title"] = "Detalles del Equipo";
}

<h2>Detalles del Equipo</h2>

<div>
    <h4>Equipo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.Marca</dd>
        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>
        <dt class="col-sm-2">Tipo de Equipo</dt>
        <dd class="col-sm-10">@Model.TipoEquipo</dd>
        <dt class="col-sm-2">Número de Serie</dt>
        <dd class="col-sm-10">@Model.NumeroSerie</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
        <dt class="col-sm-2">Laboratorio</dt>
        <dd class="col-sm-10">@Model.Laboratorio.NombreLaboratorio</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EquipoID" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
