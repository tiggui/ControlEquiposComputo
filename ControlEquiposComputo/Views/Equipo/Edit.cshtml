@model ControlEquiposComputo.Models.Equipo

@{
    ViewData["Title"] = "Editar Equipo";
}

<h2>Editar Equipo</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="EquipoID" />
    <div class="form-group">
        <label asp-for="LaboratorioID" class="control-label"></label>
        <select asp-for="LaboratorioID" class="form-control" asp-items="ViewBag.LaboratorioID"></select>
    </div>
    <div class="form-group">
        <label asp-for="Marca" class="control-label"></label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Modelo" class="control-label"></label>
        <input asp-for="Modelo" class="form-control" />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TipoEquipo" class="control-label"></label>
        <input asp-for="TipoEquipo" class="form-control" />
        <span asp-validation-for="TipoEquipo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumeroSerie" class="control-label"></label>
        <input asp-for="NumeroSerie" class="form-control" />
        <span asp-validation-for="NumeroSerie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
