@model ControlEquiposComputo.Models.Equipo

@{
    ViewData["Title"] = "Eliminar Equipo";
}

<h1>Eliminar Equipo</h1>

<h3>¿Estás seguro de que deseas eliminar este equipo?</h3>

<div>
    <h4>Equipo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Número de Equipo</dt>
        <dd class="col-sm-10">@Model.NumeroEquipo</dd>
        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.Marca</dd>
        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
        <dt class="col-sm-2">Laboratorio</dt>
        <dd class="col-sm-10">@Model.Laboratorio.NombreLaboratorio</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EquipoID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
