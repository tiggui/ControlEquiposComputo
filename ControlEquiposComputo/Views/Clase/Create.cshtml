@model ControlEquiposComputo.Models.Clase

@{
    ViewData["Title"] = "Crear Nueva Clase";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="NombreClase" class="control-label"></label>
        <input asp-for="NombreClase" class="form-control" />
        <span asp-validation-for="NombreClase" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DocenteID" class="control-label"></label>
        <select asp-for="DocenteID" class="form-control" asp-items="ViewBag.DocenteID"></select>
        <span asp-validation-for="DocenteID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LaboratorioID" class="control-label"></label>
        <select asp-for="LaboratorioID" class="form-control" asp-items="ViewBag.LaboratorioID"></select>
        <span asp-validation-for="LaboratorioID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
