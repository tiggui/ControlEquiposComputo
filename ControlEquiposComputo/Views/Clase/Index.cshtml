@model IEnumerable<ControlEquiposComputo.Models.UsoEquipo>

@{
    ViewData["Title"] = "Uso de Equipos";
}

<h1>Uso de Equipos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Estudiante.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.First().Equipo.NumeroEquipo)</th>
            <th>@Html.DisplayNameFor(model => model.First().Clase.NombreClase)</th>
            <th>@Html.DisplayNameFor(model => model.First().Actividad)</th>
            <th>@Html.DisplayNameFor(model => model.First().FechaRegistro)</th>
            <th>@Html.DisplayNameFor(model => model.First().Imagen)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Estudiante.Nombre</td>
                <td>@item.Equipo.NumeroEquipo</td>
                <td>@item.Clase.NombreClase</td>
                <td>@item.Actividad</td>
                <td>@item.FechaRegistro.ToShortDateString()</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Imagen))
                    {
                        <img src="@item.Imagen" alt="Imagen" style="width:100px; height:auto;" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UsoEquipoID" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.UsoEquipoID" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
