@model IEnumerable<ControlEquiposComputo.Models.Clase>

@{
    ViewData["Title"] = "Listado de Clases";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Clase</a>
</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Nombre de la Clase</th>
                <th>Docente</th>
                <th>Laboratorio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clase in Model)
            {
                <tr>
                    <td>@clase.NombreClase</td>
                    <td>@clase.Docente.Nombre</td>
                    <td>@clase.Laboratorio.NombreLaboratorio</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@clase.ClaseID" class="btn btn-warning btn-sm">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@clase.ClaseID" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay clases registradas en el sistema.</p>
}
