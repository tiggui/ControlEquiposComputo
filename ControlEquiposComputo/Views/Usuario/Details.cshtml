@model ControlEquiposComputo.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h2>Detalles del Usuario</h2>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Tipo Usuario</dt>
        <dd class="col-sm-10">@Model.TipoUsuario</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.UsuarioID" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
