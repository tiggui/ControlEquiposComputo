@model ControlEquiposComputo.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>

<h3>¿Está seguro que desea eliminar este usuario?</h3>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Tipo Usuario</dt>
        <dd class="col-sm-10">@Model.TipoUsuario</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="UsuarioID" />
    <div class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
