@model IEnumerable<ControlEquiposComputo.Models.Tecnico>

@{
    ViewData["Title"] = "Técnicos";
}

<h1>Técnicos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Técnico</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Especialidad</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Especialidad</td>
                <td>@item.Telefono</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TecnicoID" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.TecnicoID" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
